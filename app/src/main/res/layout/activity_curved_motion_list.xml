<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coordinatedmotion.CurvedMotionListActivity">

    <FrameLayout
        android:id="@+id/curved_motion_list_activity_item_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/curved_motion_list_activity_avatar_view"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/shape_avatar_oval"
                android:transitionName="curved_motion_avatar_to_transition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/curved_motion_list_activity_first_line_view"
                android:layout_width="250dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/curved_motion_list_activity_avatar_view"
                app:layout_constraintTop_toTopOf="@+id/curved_motion_list_activity_avatar_view" />

            <View
                android:id="@+id/curved_motion_list_activity_second_line_view"
                android:layout_width="130dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/curved_motion_list_activity_first_line_view"
                app:layout_constraintTop_toBottomOf="@+id/curved_motion_list_activity_first_line_view" />

            <View
                android:id="@+id/curved_motion_list_activity_third_line_view"
                android:layout_width="200dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGreen900"
                app:layout_constraintStart_toStartOf="@+id/curved_motion_list_activity_second_line_view"
                app:layout_constraintTop_toBottomOf="@+id/curved_motion_list_activity_second_line_view" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>