<?xml version="1.0" encoding="utf-8"?>
<!--Custom transition for elements of ScenesActivity-->
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">

    <changeBounds android:duration="250">
        <targets>
            <target android:targetId="@id/scenes_activity_fox_image" />
        </targets>
    </changeBounds>
    <changeBounds android:duration="150" android:startDelay="100">
        <targets>
            <target android:targetId="@id/scenes_activity_bar_root" />
        </targets>
    </changeBounds>

</transitionSet>
