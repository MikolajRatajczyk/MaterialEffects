<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vectors.AnimatedVectorDrawablesMenuActivity">

    <android.support.constraint.Guideline
        android:id="@+id/animated_vector_drawables_menu_activity_buttons_start_margin_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="64dp" />

    <Button
        android:id="@+id/animated_vector_drawables_menu_activity_path_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/animated_path"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/animated_vector_drawables_menu_activity_buttons_start_margin_guideline"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>